<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rhalfcaacbay.smartphonebasedbreathanalyzer" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/image_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.medroso.smartphonebasedbreathanalyzer.ActivityMain"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.medroso.smartphonebasedbreathanalyzer.ActivityReader"
            android:label="@string/title_layout_activity_test" >
        </activity>
        <activity
            android:name="com.medroso.smartphonebasedbreathanalyzer.ActivitySetting"
            android:label="@string/title_layout_activity_setting" >
        </activity>
    </application>

</manifest>
